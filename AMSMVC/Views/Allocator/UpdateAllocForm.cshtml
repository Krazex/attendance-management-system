@model AMSMVC.ViewModels.SubjectAllocatorViewModel
@{
    ViewBag.title = "Edit Subject Allocation For Teacher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<br />
<br />
<div class="ui four item stackable tabs menu" style="max-width: 840px">
    @Html.ActionLink("Manage Teachers", "Index", "Teacher", null, new { @class = "item" })
    @Html.ActionLink("New Teacher", "New", "Teacher", null, new { @class = "item" })
    @Html.ActionLink("Manage Subject Allocation", "Index", "Allocator", null, new { @class = "item" })
    <a class="active item" data-tab="">Edit Subject Allocation</a>
</div>
<br />

@using (Html.BeginForm("Save", "Allocator"))
{
    <div class="form-group">
        <label>Teacher Id</label>
        <input class="form-control disabled" style="max-width: 30rem" placeholder=@Model.SubjectAllocator.TeacherId>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubjectAllocator.SubjectId1)
        @Html.DropDownListFor(m => m.SubjectAllocator.SubjectId1, new SelectList(Model.Subjects, "SubjectId", "SubjectName"), "Select Subject", new { @class = "form-control", style = "max-width: 30rem" })
        @Html.ValidationMessageFor(m => m.SubjectAllocator.SubjectId1)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubjectAllocator.SubjectId2)
        @Html.DropDownListFor(m => m.SubjectAllocator.SubjectId2, new SelectList(Model.Subjects, "SubjectId", "SubjectName"), "Select Subject", new { @class = "form-control", style = "max-width: 30rem" })
        @Html.ValidationMessageFor(m => m.SubjectAllocator.SubjectId2)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubjectAllocator.SubjectId3)
        @Html.DropDownListFor(m => m.SubjectAllocator.SubjectId3, new SelectList(Model.Subjects, "SubjectId", "SubjectName"), "Select Subject", new { @class = "form-control", style = "max-width: 30rem" })
        @Html.ValidationMessageFor(m => m.SubjectAllocator.SubjectId3)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubjectAllocator.SubjectId4)
        @Html.DropDownListFor(m => m.SubjectAllocator.SubjectId4, new SelectList(Model.Subjects, "SubjectId", "SubjectName"), "Select Subject", new { @class = "form-control", style = "max-width: 30rem" })
        @Html.ValidationMessageFor(m => m.SubjectAllocator.SubjectId4)
    </div>

    @Html.HiddenFor(m => m.SubjectAllocator.TeacherId)
    @Html.HiddenFor(m => m.SubjectAllocator.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Allocate</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}